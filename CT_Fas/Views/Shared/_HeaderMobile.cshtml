<div class="wrap-header-mobile">
    <!-- Logo moblie -->        
    <div class="logo-mobile">
        <a href="@Url.Action("Index", "Home")"><img src="~/images/icons/logo-01.png" alt="IMG-LOGO"></a>
    </div>

    <!-- Icon header -->
    <div class="wrap-icon-header flex-w flex-r-m h-full m-r-15">
        @await Html.PartialAsync("_LoginPartial")
        
        <div class="flex-c-m h-full p-r-10">
            <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 js-show-modal-search">
                <i class="zmdi zmdi-search"></i>
            </div>
        </div>

        <div class="flex-c-m h-full p-lr-10 bor5">
            <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 icon-header-noti js-show-cart" data-notify="2">
                <i class="zmdi zmdi-shopping-cart"></i>
            </div>
        </div>
    </div>

    <!-- Button show menu -->
    <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
        <span class="hamburger-box">
            <span class="hamburger-inner"></span>
        </span>
    </div>
</div>

<!-- Menu Mobile -->
<div class="menu-mobile">
    <ul class="main-menu-m">
        <li>
            <a href="@Url.Action("Index", "Home")">Trang chủ</a>
        </li>

        <li>
            <a href="@Url.Action("Index", "Product")">Sản phẩm</a>
        </li>

        <li>
            <a href="@Url.Action("Features", "Home")" class="label1 rs1" data-label1="hot">Đặc sắc</a>
        </li>

        <li>
            <a href="@Url.Action("Blog", "Home")">Blog</a>
        </li>

        <li>
            <a href="@Url.Action("About", "Home")">Về chúng tôi</a>
        </li>

        <li>
            <a href="@Url.Action("Contact", "Home")">Liên hệ</a>
        </li>
        
        <li class="mobile-auth p-b-13">
            @if (User.Identity.IsAuthenticated)
            {
                <a href="@Url.Action("Profile", "Account")" class="stext-102 cl2 hov-cl1 trans-04">
                    <i class="zmdi zmdi-account"></i> @User.Identity.Name
                </a>
                <form class="form-inline mt-2" asp-area="Identity" asp-page="/Account/Logout" 
                      asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="stext-102 cl2 hov-cl1 trans-04 bg-transparent border-0">
                        <i class="zmdi zmdi-power"></i> Đăng xuất
                    </button>
                </form>
            }
            else
            {
                <a href="@Url.Action("Login", "Account")" class="stext-102 cl2 hov-cl1 trans-04">
                    <i class="zmdi zmdi-account"></i> Đăng nhập
                </a>
                <a href="@Url.Action("Register", "Account")" class="stext-102 cl2 hov-cl1 trans-04 mt-2">
                    <i class="zmdi zmdi-account-add"></i> Đăng ký
                </a>
            }
        </li>
    </ul>
</div>